@model IEnumerable<VentasNet.Models.Cliente>
@{
    int n = Listados.ListadoClientes.Count; //Para saber la cantidad de Clientes Totales
}
<h2>Lista de Clientes @n </h2>

<p><a class="btn btn-primary" asp-action="AgregarCliente" asp-controller="Cliente">Nuevo Cliente</a></p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.RazonSocial)</th>
            <th>@Html.DisplayNameFor(model => model.CUIT)</th>
            <th>@Html.DisplayNameFor(model => model.Domicilio)</th>
            <th>@Html.DisplayNameFor(model => model.Provincia)</th>
        </tr> <!-- De esta forma la cabecera que tendria los nombres: Id, R..Social, CUIT, Dom, Provincia-->
    </thead>


@{
    foreach(var cliente in ViewBag.Cliente)
    {
        <tr>
            <td>@cliente.Id</td>
            <td>@cliente.RazonSocial</td>
            <td>@cliente.CUIT</td>
            <td>@cliente.Domicilio</td>
            <td>@cliente.Provincia</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Cliente", new Cliente {Id= cliente.Id}) |
                @Html.ActionLink("Delete", "Delete", "Cliente", new Cliente {Id= cliente.Id})
            </td>
        </tr>
    }
}
</table>