@{
}

@model Usuario

<h2>Cargar Usuario</h2>

@using (Html.BeginForm("GuardarUsuario", "Usuario", FormMethod.Post))
{
    <div class="container">
        <div class="panel-body">

            <div class="form-group col-4 ">
                @Html.LabelFor(x => x.Id)
                @Html.TextBoxFor(model => model.Id, new {@class="form-control"})
            </div>

            <div class="form-group col-4 ">
                @Html.LabelFor(x => x.Login)
                @Html.TextBoxFor(model => model.Login, new {@class="form-control"})
            </div>

            <div class="form-group col-4 ">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(model => model.Password, new {@class="form-control"})
            </div>

            <div class="form-group align-items-end">
                <button class="btn btn-primary" type="submit">Guardar</button>
            </div>

        </div>
    </div>
}
