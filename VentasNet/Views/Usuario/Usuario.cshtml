@model VentasNet.Models.Usuario

@{
    ViewData["Title"] = "Usuario";
    
}

<h1>Usuario</h1>
<hr/>
<p><a class="btn btn-primary" asp-action="ListadoProducto" asp-controller="Producto">Productos Disponibles</a> </p>
<p><a class="btn btn-primary" asp-action="AgregarProducto" asp-controller="Producto">Agregar Producto </a></p>
<hr />
<p><a class="btn btn-primary" asp-action="ListadoProductoVendido" asp-controller="Venta">Ventas por Productos </a></p>
<p><a class="btn btn-primary" asp-action="ListadoVenta" asp-controller="Venta">Ventas por Clientes </a></p>
<hr />
<div>
    <h4>Perfil</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Listados.ListadoUsuarios[0].Id
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Login)
        </dt>
        <dd class = "col-sm-10">
            @Listados.ListadoUsuarios[0].Login
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Cambiar usuario o contraseña", "Edit", "Usuario", new Usuario { Id= Listados.ListadoUsuarios[0].Id }, new {@class="btn btn-primary"})
</div>